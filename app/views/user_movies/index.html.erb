<h1>Current User Movies</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>user_id</th>
      <th>movie_id</th>
      <th>star</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluated_movies.each do |evaluated_movie| %>
      <tr>
        <td><%= evaluated_movie.id %></td>
        <td><%= evaluated_movie.user_id %></td>
        <td><%= evaluated_movie.movie_id %></td>
        <td><%= evaluated_movie.star %></td>
        <td><%= link_to 'Show', evaluated_movie%></td>
        <td><%= link_to 'Edit', edit_user_movie_path(evaluated_movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>